<Window
    x:Class="CommunicationSample.Tcp.Server.Protocol.FileTransfer.FileTransferServerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CommunicationSample.Tcp.Server.Protocol.FileTransfer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="450"
    Title="파일 전송 서버"
    d:DataContext="{d:DesignInstance local:FileTransferServerViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Button
            Margin="54,36,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ServerStartCommand}"
            Content="서버 시작" Width="129" Height="31" />
        <TextBox
            Width="400"
            Height="40"
            Margin="54,86,346,308"
            Text="{Binding Status, FallbackValue=상태값}" />
    </Grid>
</Window>
