<UserControl
    x:Class="Samples.Presentation.Modal.ModalInfoView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hy="clr-namespace:HYSoft.Presentation.Styles.ColorTokens;assembly=Presentation.Styles"
    xmlns:local="clr-namespace:Samples.Presentation.Modal"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="400"
    Height="200"
    d:DataContext="{d:DesignInstance local:ModalInfoViewModel}"
    mc:Ignorable="d">
    <Border Background="White" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="40"
                Text="모달 입니다." />
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,20,0"
                    Padding="40,12,40,12"
                    Background="{hy:Color ButtonPrimarySurface}"
                    BorderThickness="1"
                    Command="{Binding OkCommand}"
                    Content="확인" />
                <Button
                    Padding="40,12,40,12"
                    BorderThickness="1"
                    Command="{Binding CancelCommand}"
                    Content="취소" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
