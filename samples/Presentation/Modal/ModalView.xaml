<Window
    x:Class="Samples.Presentation.Modal.ModalView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hy="http://schemas.hysoft.com/wpf/2025/xaml"
    xmlns:local="clr-namespace:Samples.Presentation.Modal"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Modal Sample"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:ModalViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Button
            Width="200"
            Height="50"
            Command="{Binding ModalOpenCommand}"
            Content="모달 창 띄우기" />
        <ContentPresenter Content="{x:Static hy:ModalManager.View}" />
    </Grid>
</Window>
