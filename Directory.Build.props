<Project>
	<PropertyGroup>
		<!-- 공통 NuGet 메타데이터 -->
		<Authors>Hwanyong.lee</Authors>
		<Company>HYSoft</Company>

		<!-- Git 저장소 메타데이터 -->
		<RepositoryUrl>https://github.com/dlghksdyd/HYSoft</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageProjectUrl>https://github.com/dlghksdyd/HYSoft</PackageProjectUrl>

		<!-- 문서/언어 기본 -->
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<NoWarn>$(NoWarn);1591</NoWarn>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>

		<!-- NuGet 페이지에 README 노출 기본값 -->
		<PackageReadmeFile>README.md</PackageReadmeFile>
	</PropertyGroup>

	<!-- 루트 README를 nupkg에 포함 -->
	<ItemGroup>
		<None Include="$(MSBuildThisFileDirectory)README.md"
		      Pack="true"
		      PackagePath="\" 
		      Condition="Exists('$(MSBuildThisFileDirectory)README.md')" />
	</ItemGroup>
</Project>