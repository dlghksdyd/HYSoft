<UserControl
    x:Class="Docs.Mvvm.BottomContentsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hy="http://schemas.hysoft.com/wpf/2025/xaml"
    xmlns:leftMenu="clr-namespace:Docs.Mvvm.LeftMenu"
    xmlns:local="clr-namespace:Docs.Mvvm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:BottomContentsViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type leftMenu:LeftMenuViewModel}">
            <leftMenu:LeftMenuView DataContext="{Binding}" />
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="62" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            Padding="40,0"
            Background="{hy:Color NavigationMenuBarBg}">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <TextBlock
                    Cursor="Hand"
                    FontSize="{hy:FontSize lg}"
                    FontWeight="Bold"
                    Foreground="{hy:Color NavigationMenuBarFg}"
                    Text="Styles">
                    <hy:EventToCommand.Binding>
                        <hy:Event
                            Command="{Binding SharedContext.UpdateLeftMenuItemCommand}"
                            CommandParameter="{x:Static leftMenu:ELeftMenuType.Styles}"
                            RoutedEvent="{x:Static TextBlock.MouseLeftButtonUpEvent}" />
                    </hy:EventToCommand.Binding>
                </TextBlock>
            </StackPanel>
        </Border>
        <Grid Grid.Row="1" d:Background="{hy:Color SurfaceBase}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ContentPresenter Grid.Column="0" Content="{Binding Menu}" />
            <ContentPresenter Grid.Column="1" Content="{Binding SharedContext.Content}" />
        </Grid>
    </Grid>

</UserControl>
