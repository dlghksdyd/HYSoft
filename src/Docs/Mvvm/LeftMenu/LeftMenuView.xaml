<UserControl
    x:Class="Docs.Mvvm.LeftMenu.LeftMenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hy="http://schemas.hysoft.com/wpf/2025/xaml"
    xmlns:local="clr-namespace:Docs.Mvvm.LeftMenu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local:LeftMenuViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type local:MenuItem}">
            <Grid>
                <Grid Margin="0,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0"
                        Height="24"
                        Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid
                            Grid.Column="0"
                            Width="20"
                            Margin="0,0,4,0">
                            <hy:HyIcon
                                Width="20"
                                Height="20"
                                Source="Dot"
                                Visibility="{Binding IsSubItemExist, Converter={StaticResource BoolToVisibilityReverseConverter}}"
                                Color="{hy:Color TextPrimary}" />
                            <Grid Visibility="{Binding IsSubItemExist, Converter={StaticResource BoolToVisibilityConverter}}">
                                <hy:HyIcon
                                    Width="20"
                                    Height="20"
                                    Cursor="Hand"
                                    Source="ExpandMore"
                                    Visibility="{Binding IsExpand, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Color="{hy:Color TextPrimary}">
                                    <hy:EventToCommand.Binding>
                                        <hy:Event Command="{Binding CollapseMenuCommand}" RoutedEvent="{x:Static hy:HyIcon.MouseLeftButtonUpEvent}" />
                                    </hy:EventToCommand.Binding>
                                </hy:HyIcon>
                                <hy:HyIcon
                                    Width="20"
                                    Height="20"
                                    Cursor="Hand"
                                    Source="NavigateNext"
                                    Visibility="{Binding IsExpand, Converter={StaticResource BoolToVisibilityReverseConverter}}"
                                    Color="{hy:Color TextPrimary}">
                                    <hy:EventToCommand.Binding>
                                        <hy:Event Command="{Binding ExpandMenuCommand}" RoutedEvent="{x:Static hy:HyIcon.MouseLeftButtonUpEvent}" />
                                    </hy:EventToCommand.Binding>
                                </hy:HyIcon>
                            </Grid>
                        </Grid>
                        <TextBlock
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            FontSize="{hy:FontSize Md}"
                            Text="{Binding Title}">
                            <hy:EventToCommand.Binding>
                                <hy:Event
                                    Command="{Binding Path=DataContext.SharedContext.SelectMenuItemCommand, RelativeSource={RelativeSource AncestorType={x:Type local:LeftMenuView}}}"
                                    CommandParameter="{Binding}"
                                    RoutedEvent="{x:Static TextBlock.MouseLeftButtonUpEvent}" />
                            </hy:EventToCommand.Binding>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="{hy:Color TextPrimary}" />
                                    <Setter Property="FontWeight" Value="Regular" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="Foreground" Value="Black" />
                                            <Setter Property="FontWeight" Value="Bold" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                    <ItemsControl
                        Grid.Row="1"
                        Margin="28,0,0,0"
                        ItemsSource="{Binding SubItems}"
                        Visibility="{Binding IsExpand, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentPresenter Content="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Border Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,8"
                FontSize="{hy:FontSize Lg}"
                Foreground="{hy:Color TextPrimary}"
                Text="Content"
                Visibility="{Binding SharedContext.IsContentVisibility, Converter={StaticResource BoolToVisibilityConverter}}" />
            <hy:HyScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Border Padding="0,0,20,0">
                    <ItemsControl ItemsSource="{Binding SharedContext.MenuItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentPresenter Content="{Binding}" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>
            </hy:HyScrollViewer>
        </Grid>
    </Border>

</UserControl>
