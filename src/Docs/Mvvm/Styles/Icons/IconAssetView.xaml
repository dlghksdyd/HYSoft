<UserControl
    x:Class="Docs.Mvvm.Styles.Icons.IconAssetView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hy="http://schemas.hysoft.com/wpf/2025/xaml"
    xmlns:local="clr-namespace:Docs.Mvvm.Styles.Icons"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:Background="{hy:Color SurfaceBase}"
    d:DataContext="{d:DesignInstance local:IconAssetViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Padding="16">
            <hy:HyTextBox
                Width="250"
                Height="32"
                HorizontalAlignment="Left"
                BorderBrush="{hy:Color BorderDefault}"
                BorderThickness="1"
                WaterMark="Search Icon Key"
                WaterMarkForeground="{hy:Color TextWatermark}">
                <hy:EventToCommand.Binding>
                    <hy:Event Command="{Binding SearchTextChanged, UpdateSourceTrigger=PropertyChanged}" RoutedEvent="TextBox.TextChanged" />
                </hy:EventToCommand.Binding>
            </hy:HyTextBox>
        </Border>
        <hy:HyScrollViewer Grid.Row="1">
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Keys}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <hy:HyIcon
                                Grid.Row="0"
                                Width="32"
                                Height="32"
                                Source="{Binding}" />
                            <TextBlock Grid.Row="1" Text="{Binding}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </hy:HyScrollViewer>
    </Grid>
</UserControl>
