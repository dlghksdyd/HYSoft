<Window
    x:Class="Test.Views.TcpClientView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Test.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:TcpClientViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Button
            Margin="54,36,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ServerStartCommand}"
            Content="서버 시작" />
        <Button
            Margin="150,36,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ClientStartCommand}"
            Content="클라이언트 연결" />
        <Button
            Margin="275,36,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ClientSendFileCommand}"
            Content="데이터 전송" />
        <TextBox
            Width="400"
            Height="40"
            Margin="54,86,346,308"
            Text="{Binding Status, FallbackValue=상태값}" />
    </Grid>
</Window>
