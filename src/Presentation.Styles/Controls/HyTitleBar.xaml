<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="clr-namespace:HYSoft.Presentation.Interactivity;assembly=Presentation"
    xmlns:c="clr-namespace:HYSoft.Presentation.Styles.ColorTokens"
    xmlns:local="clr-namespace:HYSoft.Presentation.Styles.Controls">
    <Style TargetType="{x:Type local:HyTitleBar}">
        <Setter Property="Background" Value="{c:Color TitleBarBackground}" />
        <Setter Property="Foreground" Value="{c:Color TitleBarText}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:HyTitleBar}">
                    <Border
                        Padding="{TemplateBinding Padding}"
                        b:WindowDragBehavior.EnableDragMove="True"
                        Background="{TemplateBinding Background}"
                        IsHitTestVisible="True"
                        SnapsToDevicePixels="True">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Grid.Column="0" Content="{TemplateBinding Content}" />
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <local:HyButton
                                    Margin="{TemplateBinding IconMargin}"
                                    Padding="{TemplateBinding IconPadding}"
                                    VerticalAlignment="Center"
                                    BorderThickness="0">
                                    <b:EventToCommand.Binding>
                                        <b:Event Command="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=MinimizeAppCommand}" RoutedEvent="{x:Static local:HyButton.MouseLeftButtonUpEvent}" />
                                    </b:EventToCommand.Binding>
                                    <local:HyButton.Style>
                                        <Style TargetType="local:HyButton">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#33ffffff" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </local:HyButton.Style>
                                    <local:HyIcon
                                        Width="{TemplateBinding IconSize}"
                                        Height="{TemplateBinding IconSize}"
                                        Source="Remove"
                                        Color="{TemplateBinding Foreground}" />
                                </local:HyButton>
                                <local:HyButton
                                    Margin="{TemplateBinding IconMargin}"
                                    Padding="{TemplateBinding IconPadding}"
                                    VerticalAlignment="Center"
                                    BorderThickness="0">
                                    <b:EventToCommand.Binding>
                                        <b:Event Command="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ExitAppCommand}" RoutedEvent="{x:Static local:HyButton.MouseLeftButtonUpEvent}" />
                                    </b:EventToCommand.Binding>
                                    <local:HyButton.Style>
                                        <Style TargetType="local:HyButton">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#33ffffff" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </local:HyButton.Style>
                                    <local:HyIcon
                                        Width="{TemplateBinding IconSize}"
                                        Height="{TemplateBinding IconSize}"
                                        Source="Close"
                                        Color="{TemplateBinding Foreground}" />
                                </local:HyButton>
                            </StackPanel>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>