<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:HYSoft.Presentation.Styles.Controls"
    xmlns:icons="clr-namespace:HYSoft.Presentation.Styles.Icons">

    <icons:IconKeyToImageSourceConverter x:Key="IconKeyToImageSourceConverter" />

    <Style TargetType="{x:Type controls:HyIcon}">
        <Setter Property="Color" Value="Black" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:HyIcon}">
                    <Border
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        Padding="{TemplateBinding Padding}"
                        Background="{TemplateBinding Background}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid>
                            <Image
                                x:Name="PART_Image"
                                SnapsToDevicePixels="True"
                                Stretch="UniformToFill"
                                UseLayoutRounding="True"
                                Visibility="Visible" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
