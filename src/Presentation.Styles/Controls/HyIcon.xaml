<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:HYSoft.Presentation.Styles.Controls"
    xmlns:icons="clr-namespace:HYSoft.Presentation.Styles.Icons">

    <icons:IconKeyToImageSourceConverter x:Key="IconKeyToImageSourceConverter" />

    <Style TargetType="controls:HyIcon">
        <Setter Property="Width" Value="24" />
        <Setter Property="Height" Value="24" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Color" Value="Black" />
        <Setter Property="ColorHover" Value="DodgerBlue" />
        <Setter Property="ColorPressed" Value="Crimson" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:HyIcon">
                    <Border Background="{TemplateBinding Background}">
                        <Grid>
                            <!--  Normal  -->
                            <Image
                                x:Name="PART_Image"
                                SnapsToDevicePixels="True"
                                Stretch="Uniform"
                                UseLayoutRounding="True"
                                Visibility="Visible">
                                <Image.Source>
                                    <Binding
                                        Converter="{StaticResource IconKeyToImageSourceConverter}"
                                        Path="Source"
                                        RelativeSource="{RelativeSource TemplatedParent}" />
                                </Image.Source>
                                <Image.OpacityMask>
                                    <Binding Path="Color" RelativeSource="{RelativeSource TemplatedParent}" />
                                </Image.OpacityMask>
                            </Image>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
