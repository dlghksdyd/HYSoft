<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:HYSoft.Presentation.Styles.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Presentation.Styles;component/Design/StyleColor.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  StyleRadioButton 전용 템플릿  -->
    <Style TargetType="{x:Type local:StyleRadioButton}">
        <Setter Property="Foreground" Value="{StaticResource Style/Color/Text/White}" />
        <Setter Property="FontSize" Value="{StaticResource Style/FontSize/H4}" />
        <Setter Property="ButtonSize" Value="16" />
        <Setter Property="TextPadding" Value="10" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:StyleRadioButton}">
                    <Border Background="Transparent" SnapsToDevicePixels="True">
                        <Grid Margin="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="{TemplateBinding TextPadding}" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Bullet 영역  -->
                            <Grid
                                Grid.Column="0"
                                Width="{TemplateBinding ButtonSize}"
                                Height="{TemplateBinding ButtonSize}">
                                <!--  바깥 원  -->
                                <Ellipse
                                    x:Name="PART_Bullet"
                                    Fill="{StaticResource Style/Color/Surface/White}"
                                    Stroke="{StaticResource Style/Color/Border/Primary}"
                                    StrokeThickness="0" />

                                <!--  안쪽 점(체크 표시)  -->
                                <Ellipse
                                    x:Name="PART_Dot"
                                    Margin="4"
                                    Fill="{StaticResource Style/Color/Surface/Selected}"
                                    Opacity="0" />
                            </Grid>

                            <!--  텍스트  -->
                            <TextBlock
                                x:Name="xTextBlock"
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                FontSize="{TemplateBinding FontSize}"
                                Foreground="{TemplateBinding Foreground}"
                                Text="{TemplateBinding Text}" />
                        </Grid>
                    </Border>

                    <!--  상태 트리거  -->
                    <ControlTemplate.Triggers>
                        <!--  체크되었을 때: 점 보이기  -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="PART_Dot" Property="Opacity" Value="1" />
                        </Trigger>

                        <!--  마우스오버: 배경 강조  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Bullet" Property="Fill" Value="{StaticResource Style/Color/Surface/Hover2}" />
                        </Trigger>

                        <!--  비활성화: 투명도 낮춤  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Bullet" Property="Opacity" Value="0.5" />
                            <Setter TargetName="PART_Dot" Property="Opacity" Value="0.5" />
                            <Setter TargetName="xTextBlock" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>