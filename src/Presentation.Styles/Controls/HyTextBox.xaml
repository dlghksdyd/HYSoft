<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:HYSoft.Presentation.Styles.Controls">
    <Style TargetType="{x:Type local:HyTextBox}">
        <Setter Property="Background" Value="White" />
        <Setter Property="WaterMark" Value="" />
        <Setter Property="WaterMarkForeground" Value="Gray" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="CanKorean" Value="True" />
        <Setter Property="CanPaste" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:HyTextBox}">
                    <Border
                        x:Name="xBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}"
                        Focusable="False">
                        <Grid x:Name="Root">
                            <!--  Watermark  -->
                            <TextBlock
                                x:Name="WatermarkText"
                                Margin="2,0,2,0"
                                Padding="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                FontSize="{TemplateBinding FontSize}"
                                FontWeight="{TemplateBinding FontWeight}"
                                Foreground="{TemplateBinding WaterMarkForeground}"
                                IsHitTestVisible="False"
                                Text="{TemplateBinding WaterMark}"
                                Visibility="Hidden" />

                            <!--  실제 입력 박스  -->
                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                Margin="-2"
                                Padding="{TemplateBinding Padding}"
                                HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                Background="Transparent"
                                FontSize="{TemplateBinding FontSize}"
                                FontWeight="{TemplateBinding FontWeight}"
                                Foreground="{TemplateBinding Foreground}" />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="WatermarkText" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <!--  비활성화: 투명도 낮춤  -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="xBorder" Property="Opacity" Value="0.7" />
                            <Setter TargetName="WatermarkText" Property="Opacity" Value="0.7" />
                            <Setter TargetName="PART_ContentHost" Property="Opacity" Value="0.7" />
                            <Setter Property="Cursor" Value="Arrow" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>