<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0-windows</TargetFramework>
		<RootNamespace>HYSoft.Presentation</RootNamespace>
		<UseWPF>true</UseWPF>
		<PackageOutputPath>$(ProjectDir)bin\$(Configuration)\</PackageOutputPath>

		<!-- NuGet 메타데이터 -->
		<PackageId>HYSoft.Presentation</PackageId>
		<Description>UI Library for WPF.</Description>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<GeneratePackageOnBuild>True</GeneratePackageOnBuild>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<LangVersion>latest</LangVersion>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="Converter\**" />
	  <Compile Remove="Interactivity\NewFolder\**" />
	  <EmbeddedResource Remove="Converter\**" />
	  <EmbeddedResource Remove="Interactivity\NewFolder\**" />
	  <None Remove="Converter\**" />
	  <None Remove="Interactivity\NewFolder\**" />
	  <Page Remove="Converter\**" />
	  <Page Remove="Interactivity\NewFolder\**" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Prism.Wpf" Version="9.0.537" />
	</ItemGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Data\Data.csproj" />
	</ItemGroup>

</Project>
