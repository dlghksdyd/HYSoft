<Window
    x:Class="Samples.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hy="http://schemas.hysoft.com/wpf/2025/xaml"
    xmlns:local="clr-namespace:Samples"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    Title="MainView"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:MainViewModel}"
    mc:Ignorable="d">
    <Grid>
        <DockPanel LastChildFill="False">
            <Button
                Width="300"
                Padding="10"
                Command="{Binding FileTransferSampleCommand}"
                Content="File Transfer Test"
                DockPanel.Dock="Top" />

            <Separator Height="10" DockPanel.Dock="Top" />

            <Button
                Width="300"
                Padding="10"
                Command="{Binding ModalSampleCommand}"
                Content="Modal Test"
                DockPanel.Dock="Top" />

            <Separator Height="10" DockPanel.Dock="Top" />

            <Button
                Width="300"
                Padding="10"
                Command="{Binding IconSampleCommand}"
                Content="Icon Test"
                DockPanel.Dock="Top" />
        </DockPanel>
    </Grid>
</Window>
