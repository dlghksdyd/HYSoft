<Window
    x:Class="Samples.Communication.Tcp.Client.Protocol.FileTransfer.FileTransferClientView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hy="http://schemas.hysoft.com/wpf/2025/xaml"
    xmlns:local="clr-namespace:Samples.Communication.Tcp.Client.Protocol.FileTransfer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="파일 전송 클라이언트"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:FileTransferClientViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Button
            Width="115"
            Height="30"
            Margin="54,36,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ClientStartCommand}"
            Content="클라이언트 준비" />
        <Button
            Width="125"
            Height="30"
            Margin="196,36,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ClientSendFileCommand}"
            Content="데이터 전송" />
        <TextBox
            Height="40"
            Margin="54,97,479,297"
            Text="{Binding Status, FallbackValue=상태값}" />
    </Grid>
</Window>
